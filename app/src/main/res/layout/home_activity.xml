<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">
    `

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:padding="0dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:id="@+id/cardView_homeLocationTitle"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Home Location"
                            android:id="@+id/textView_homeLocation"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:src="@drawable/mostly_cloudy"
                        android:id="@+id/imageView_homeLocationWeatherIcon"
                        android:clickable="true" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:text="-28.3°C"
                            android:inputType="textCapSentences"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/textView_tempHomeLoc"
                            android:textStyle="normal|bold"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:gravity="center_vertical" />

                        <TextView
                            android:text="Mostly rain"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/textView_homeLocWeatherDescription"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"
                            android:inputType="text|textCapSentences|textMultiLine" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_work"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:padding="0dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:id="@+id/cardView_workLocationTitle"
                    android:clickable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Work Location"
                        android:id="@+id/textView_workLocation"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.5"
                    android:src="@drawable/mostly_cloudy"
                    android:id="@+id/imageView_workLocationWeatherIcon"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="-28.7°C"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/textView_tempWorkLoc"
                        android:textStyle="normal|bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:gravity="center_vertical" />

                    <TextView
                        android:text="Mostly Cloudy"
                        android:inputType="textCapSentences|textMultiLine"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/textView_workLocWeatherDescription"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:text="Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="18dp"
                    android:layout_margin="4dp"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:text="Service Active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:textSize="16sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="4dp" />

                        <TextView
                            android:text="Traffic Alerts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:textSize="16sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="4dp" />

                        <TextView
                            android:text="Switch Sound Profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:textSize="16sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="4dp" />

                        <TextView
                            android:text="Switch WiFi/Mobile Data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textSize="16sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="8dp">

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch_serviceStatus"
                            android:gravity="center|start" />
                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch_trafficAlerts"
                            android:gravity="center|start" />
                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch_soundProfile"
                            android:gravity="center|start" />
                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch_wifiStatus"
                            android:gravity="center|start" />

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:text="Preference"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button_preference" />

                    <Button
                        android:text="Work Schedule"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button_workSchedule" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Sound Profile: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />

                        <TextView
                            android:text="WiFi: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />

                        <TextView
                            android:text="Headphone: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"
                        android:orientation="vertical">

                        <TextView
                            android:text="Silent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_soundProfileStatus"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />

                        <TextView
                            android:text="ON"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_wifiStatus"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />

                        <TextView
                            android:text="Plugged"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_headphoneStatus"
                            android:textSize="14sp"
                            android:paddingLeft="4dp"
                            android:layout_margin="2dp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="User Location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14" />

                        <TextView
                            android:text="Not in Home Loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_userLocationStatus"
                            android:paddingLeft="2dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>